<div class="cont">
    <form action="/maalik/admin/register" class="login-form" method="POST">
        <h1>Register / Sign Up</h1>
        <div class="textb">
            <input type="text" placeholder="Username" name="username">
        </div>
        <div class="textb">
            <input type="password" placeholder="Password" name="password">
            <div class="show-password fas fa-eye-slash"></div>
        </div>

        <button class="butt fas fa-arrow-right" type="submit"></button>

        <a href="/maalik/admin/login">Login</a>
    </form>
</div>


